
    <nav>
        <ul class="ul-parent">
            {% for link in linklists.products-menu.links %}
            <li class="li-parent">
                <a class="{% if link.active %}link-active{% endif %}{% if link.child_active %}link-active{% endif %}"  href="{{ link.url }}">{{ link.title }}</a>
                {% if link.links != blank %}
                <ul class="child">
                    {% for child_link in link.links %}
                    <li>
                        <a {% if child_link.active %}class="link-active" {% endif %} href="{{ child_link.url }}">{{ child_link.title }}</a>
                        {% if child_link.links != blank %}
                        <ul class="grandchild">
                            {% for grandchild_link in child_link.links %}
                            <li>
                                <a {% if grandchild_link.active %}class="link-active" {% endif %} href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </nav>


{% schema %}
{
    "name": "Product navigation",
    "tag": "section",
    "class": "nav-products" 
}
{% endschema %}